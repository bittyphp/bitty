{
    "name": "bittyphp/bitty",
    "description": "A tiny and simple MVC framework. No fuss, no muss, no coconuts.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Kingsley",
            "email": "bizurkur@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "container-interop/service-provider": "*",
        "twig/twig": "^1.35|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "provide": {
        "psr/container-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "Bitty\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitty\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
